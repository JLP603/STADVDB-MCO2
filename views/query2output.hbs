<div class="container">
    <!-- Title -->
    <h2>Businesses In A State Open On A Specific Day</h2>
    <br>

    <!-- Output -->
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">City</th>
          <th scope="col">Business Name</th>
        </tr>
      </thead>
      <tbody>
        {{#if result}}
          {{#each result}}
            <tr>
              <td>{{this.city}}</td>
              <td>{{this.business_name}}</td>
            </tr>
            {{/each}}
        {{else}}
          <tr>
            <td>Error. Please check if the input entered is valid.</td>
          </tr>
        {{/if}}
      </tbody>
    </table>

    <!-- Buttons -->
    <div class="btnGroup">
      <button class="btn btn-outline-info leftbtn" id="again-btn">Enter New Input</button>
      <button class="btn btn-outline-secondary rightbtn" id="home-btn">Back to Home</button>
    </div>
</div>

