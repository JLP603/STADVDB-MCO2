<div class="container">
  <h2>A User's Ratings Of A Business</h2>
  <p>Rating of user {{UserName}} on business {{BusinessName}}</p>
  <br>
  <!-- Output -->
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Rating of user</th>

      </tr>
    </thead>
    <tbody>
      {{#if result}}
      {{#each result}}
      <tr>
        <td>{{this.UserRate}}</td>
      </tr>
      {{/each}}
      {{else}}
      <tr>
        <td>No ratings found. Please check if the input entered is valid.</td>
      </tr>
      {{/if}}
    </tbody>
  </table>

  <!-- Buttons -->
  <div class="btnGroup">
    <button class="btn btn-outline-info leftbtn" id="again-btn">Enter New Input</button>
    <button class="btn btn-outline-secondary rightbtn" id="home-btn">Back to Home</button>
  </div>
</div>