<div class="container">
    <!-- Title -->
    <h2>Daily Check-In Rate</h2>
    <p>Percentage of business of the total amount of business in a week</p>
    <br>

    <!-- Output -->
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Check-In rate on {{day_input}} in percent</th>
        </tr>
      </thead>
      <tbody>
        {{#if result}}
          {{#each result}}
            <tr>
              <td>{{this.Busy_Percentage}}</td>
            </tr>
            {{/each}}
        {{else}}
          <tr>
            <td>Error. Please check if the input entered is valid.</td>
          </tr>
        {{/if}}
      </tbody>
    </table>

    <!-- Buttons -->
    <div class="btnGroup">
      <button class="btn btn-outline-info leftbtn" id="again-btn">Enter New Input</button>
      <button class="btn btn-outline-secondary rightbtn" id="home-btn">Back to Home</button>
    </div>
</div>

