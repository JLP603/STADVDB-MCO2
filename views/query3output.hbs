<div class="container">
    <!-- Title -->
      <h2>Avg Stars For A Business Category Per City (Inactive and Active)</h2>
 
    <br>

    <!-- Output -->
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
              <th scope="col">Category Name</th>
              <th scope="col">City</th>
              <th scope="col">Avg Stars</th>
            </tr>
          </thead>
        <tbody>
            {{#if result}}
              {{#each result}}
                <tr>
                  <td>{{this.category}}</td>
                  <td>{{this.city}}</td>
                  <td>{{this.avgStars}}</td>
                </tr>
                {{/each}}
            {{else}}
              <tr>
               <td>Entries could not be found.</td>
              </tr>
            {{/if}}
        </tbody>
    </table>

    <!-- Buttons -->
    <div class="btnGroup">
      <button class="btn btn-outline-info leftbtn" id="again-btn">Enter New Input</button>
      <button class="btn btn-outline-secondary rightbtn" id="home-btn">Back to Home</button>
    </div>
</div>