<div class="container">
  <!-- Title -->
  <h2>List Of Tips Given On A Specific Date</h2>
  <p>People that gave tips to businesses on {{MonthInput}}/{{DayInput}}/{{YearInput}}</p>
  <br>

  <!-- Output -->
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Business Name</th>
        <th scope="col">Year</th>
        <th scope="col">Month</th>
        <th scope="col">Day</th>
        <th scope="col">Tipper</th>
        <th scope="col">Comments</th>
      </tr>
    </thead>
    <tbody>
      {{#if result}}
      {{#each result}}
      <tr>
        <td>{{this.business_name}}</td>
        <td>{{this.date_year}}</td>
        <td>{{this.date_month}}</td>
        <td>{{this.date_day}}</td>
        <td>{{this.name}}</td>
        <td>{{this.tip_text}}</td>
      </tr>
      {{/each}}
      {{else}}
      <tr>
        <td>No tips were given on that date. Please check if the input entered is valid.</td>
      </tr>
      {{/if}}
    </tbody>
  </table>

  <!-- Buttons -->
  <div class="btnGroup">
    <button class="btn btn-outline-info leftbtn" id="again-btn">Enter New Input</button>
    <button class="btn btn-outline-secondary rightbtn" id="home-btn">Back to Home</button>
  </div>
</div>